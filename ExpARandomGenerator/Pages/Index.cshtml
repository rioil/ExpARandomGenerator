@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>1</th>
                <th>2</th>
                <th>3</th>
                <th>4</th>
                <th>5</th>
                <th>6</th>
                <th>7</th>
                <th>8</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Data.Count; i++)
            {
                var digits = Model.Data[i];
                <tr>
                    <td class="align-middle">Data@(i)</td>
                    @foreach (var digit in digits)
                    {
                        <td>
                            <div class="h2">@digit.ToString("X1")</div>
                            <div>@Convert.ToString(digit, 2).PadLeft(4, '0')</div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
